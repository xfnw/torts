pname="muon"
version="0.3.1"
src="tarball+https://muon.build/releases/v0.3.1/muon-v0.3.1.tar.gz#45f6ad728946a0788188004e3a88a77a7d07b48525ce0646430589d1db4c832e"
rel=1

downloadPhase() {
	tce-load -wil compiletc muon-bootstrap pkgconf
}

patchPhase() {
	cd src
	# XXX: remove me after muon 0.4
	patch -p1 <../fix-without-git.patch
}

configurePhase() {
	muon -C src setup "$PWD/build"
}

buildPhase() {
	muon -C build samu
}

installPhase() {
	muon -C build install -d "$PWD/out"
}

metadataPhase() {
	cat - changelog > "$pname.tcz.info" <<EOF
Title:          $pname.tcz
Description:    meson-compatible build system
Version:        $version
Author:         Stone Tickle
Original-site:  https://muon.build
Copying-policy: GPL-3.0-only
Size:           0
Extension_by:   xfnw
Tags:           build meson
Comments:       ----
EOF
}
